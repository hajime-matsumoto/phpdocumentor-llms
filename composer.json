{
    "name": "cyto/phpdocumentor-llms",
    "description": "LLM-friendly single-file documentation template for phpDocumentor",
    "type": "phpdocumentor-template",
    "keywords": ["phpdoc", "phpdocumentor", "template", "llms", "llm", "ai", "documentation", "markdown"],
    "license": "MIT",
    "authors": [
        {
            "name": "Hajime Matsumoto",
            "email": "mail@hagino3000.com"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpdocumentor/phpdocumentor": "^3.0",
        "symfony/filesystem": "^6.0|^7.0",
        "symfony/process": "^6.0|^7.0"
    },
    "autoload-dev": {
        "psr-4": {
            "PhpDocumentorLlms\\Test\\": "tests/",
            "PhpDocumentorLlms\\Example\\": "src/Example/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "phpdocumentor": {
            "template": {
                "name": "llms",
                "path": "themes/llms"
            }
        }
    }
}
